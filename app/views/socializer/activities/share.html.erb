<%= form_tag new_stream_share_path(@activity_object.embeddable) do %>
<p>
  <label>
    Would you like to say something along with the sharing of this activity?<br>
    <textarea id="share[content]" name="share[content]" rows="5" style="width: 100%;"></textarea>
  </label>
</p>
<p>
	<input type="text" name="share[object_ids]" id="share_object_ids" />
</p>
    <script type="text/javascript">
    $(document).ready(function() {
        $("#share_object_ids").tokenInput("<%= audiences_path %>", { minChars: 0 });
    });
    </script>
<input type="hidden" name="share[activity_id]" id="share[activity_id]" value="<%= @activity_object.id %>">
<ul>
<li><%= render @activity_object.embeddable %></li>
</ul>
<p>
  <input type="submit" value="Share" />
</p>
<% end %>
